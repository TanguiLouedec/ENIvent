{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="mt-16 flex flex-col items-center justify-center">
        <div class="p-8 gap-8 flex flex-col shadow-2xl rounded-xl border-2">
            <div>{{ form_start(registrationForm) }}</div>
                <div class="flex flex-row items-center justify-between">
                    <div class="h-full w-full">
                            {{ form_widget(registrationForm.email, { 'attr': {'class': 'w-full border-b focus:outline-none text-center', 'placeholder': 'Email address'} }) }}
                    </div>
                </div>

                <div class="flex flex-row items-center justify-between">
                    <div class="h-full w-full">
                            {{ form_widget(registrationForm.nickname, { 'attr': {'class': 'w-full border-b focus:outline-none text-center', 'placeholder': 'Username'} }) }}
                    </div>
                </div>

                <div class="flex flex-row items-center justify-between">
                    <div class="h-full w-full">
                            {{ form_widget(registrationForm.firstname, { 'attr': {'class': 'w-full border-b focus:outline-none text-center', 'placeholder': 'First name'} }) }}
                    </div>
                </div>

                <div class="flex flex-row items-center justify-between">
                    <div class="h-full w-full">
                            {{ form_widget(registrationForm.lastname, { 'attr': {'class': 'w-full border-b focus:outline-none text-center', 'placeholder': 'Last name'} }) }}
                    </div>
                </div>
                <div class="flex flex-row items-center justify-between">
                    <div class="h-full w-full">
                            {{ form_widget(registrationForm.phoneNumber, { 'attr': {'class': 'w-full border-b focus:outline-none text-center', 'placeholder': 'Phone number'} }) }}
                    </div>
                </div>

                <div class="flex flex-row items-center justify-between">
                    <div class="h-full w-full">
                            {{ form_widget(registrationForm.password.first, { 'attr': {'class': 'w-full border-b focus:outline-none text-center', 'placeholder': 'Password'} }) }}
                    </div>
                </div>

                <div class="flex flex-row items-center justify-between">
                    <div class="h-full w-full">
                            {{ form_widget(registrationForm.password.second, { 'attr': {'class': 'w-full border-b focus:outline-none text-center', 'placeholder': 'Confirm password'} }) }}
                    </div>
                </div>

                <div class="flex flex-row items-center justify-between">
                    <div class="h-full w-full">
                        {{ form_widget(registrationForm.campus, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', 'placeholder': 'Confirm password'} }) }}
                    </div>
                </div>

                <div class="flex flex-row items-center justify-between">
                    <div class="h-full w-full">
                        <p class="mb-4 text-sm text-gray-500">
                            {{ form_label(registrationForm.profilePicture) }}
                        </p>
                        {{ form_widget(registrationForm.profilePicture) }}
                    </div>
                </div>

                <button type="submit" class="w-full h-10 rounded-full bg-blue-600 text-white">Register</button>
            <div>{{ form_end(registrationForm) }}</div>
        </div>
    </div>


{% endblock %}
