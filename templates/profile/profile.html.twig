{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="mt-8 flex flex-col items-center justify-center">
        <div class="w-1/6 p-4 rounded-2xl shadow-xl bg-white border-2 border-blue-600">
            <div class="w-full flex justify-center overflow-hidden">
                <img src="{{ asset('img/profilePictures/' ~ user.profilePicture) }}" alt="Profile picture" class="h-32 aspect-square rounded-full border-2 border-blue-600">
            </div>

            <h1>{{ user.nickname }}</h1>
            <h1>{{ user.firstName }}</h1>
            <h1>{{ user.lastName }}</h1>
            <h1>{{ user.email }}</h1>
            <h1>{{ user.phoneNumber }}</h1>
            <h1>{{ user.campus.name }}</h1>
        </div>
        {% if user.id == actualUser %}
        <a href="{{ path('profile_update') }}"><button>Update</button></a>
        <a href="{{ path('profile_delete') }}"><button onclick="return confirm('Are you sure you want to delete this user ?')">Delete</button></a>
        {% endif %}
    </div>
{% endblock %}
