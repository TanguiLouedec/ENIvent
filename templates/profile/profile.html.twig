{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="">
        <img src="{{ asset('img/profilePictures/' ~ user.profilePicture) }}" alt="" style="height: 200px">
    
        <h1>{{ user.nickname }}</h1>
        <h1>{{ user.firstName }}</h1>
        <h1>{{ user.lastName }}</h1>
        <h1>{{ user.email }}</h1>
        <h1>{{ user.phoneNumber }}</h1>
        <h1>{{ user.campus.name }}</h1>
    </div>

    <a href="{{ path('profile_update') }}"><button>Update</button></a>
    <a href="{{ path('profile_delete') }}"><button>Delete</button></a>
{% endblock %}
