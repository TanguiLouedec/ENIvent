{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="mt-8 flex flex-col items-center justify-center">
        <div class="w-96 p-8 flex flex-col items-center gap-4 rounded shadow-md bg-gray-100">
            <div class="w-full flex justify-center overflow-hidden">
                <img src="{{ asset('img/profilePictures/' ~ user.profilePicture) }}" alt="Profile picture" class="h-32 aspect-square rounded-full border-2 border-teal-700">
            </div>

            <h1 class="self-center">@{{ user.nickname }}</h1>
            <h1>{{ user.firstName }} {{ user.lastName }}</h1>
            <h1>{{ user.email }}</h1>
            <h1>{{ user.phoneNumber }}</h1>
            <h1>{{ user.campus.name }}</h1>
            {% if user.id == actualUser %}
                <div class="mt-6 w-full flex flex-row justify-between">
                    <a href="{{ path('profile_update') }}" class="w-32 flex flex-col items-center justify-center h-10 p-2 self-center border-2 border-yellow-400 rounded hover:bg-yellow-400 hover:text-white"><button>Update</button></a>
                    <a href="{{ path('profile_delete') }}" class="w-32 flex flex-col items-center justify-center h-10 p-2 self-center border-2 border-orange-400 rounded hover:bg-orange-400 hover:text-white"><button onclick="return confirm('Are you sure you want to delete this user ?')">Delete</button></a>
                </div>
            {% endif %}
        </div>

    </div>
{% endblock %}
