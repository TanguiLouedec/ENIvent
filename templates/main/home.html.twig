{% extends 'base.html.twig' %}

{% block title %}Here are the events{% endblock %}

{% block body %}

    <h1 class="mt-8 ml-8 text-2xl">Events :</h1>

    <section class="w-1/2 h-1/2 mt-8 ml-8 rounded-md border-2 border-blue-600 overflow-y-auto">

        <div class="[&>*:nth-child(even)]:bg-blue-100 overflow-hidden">
            {% for event in events %}
                <div class="h-16 pl-4 pr-4 flex items-center">
                    <a href="{{ path('event_detail', {'id': event.id}) }}"
                    title="View details about this wish"> {{ event.name }}
                    </a>
                </div>
            {% endfor %}
        </div>

    </section>
{% endblock %}
